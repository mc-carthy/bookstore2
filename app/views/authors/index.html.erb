<h2>Authors</h2>

<table class="table table-striped">
  <tr>
    <th>Author Name</th>
    <th>Actions</th>
  </tr>
  <% @authors.each do |aut| %>
    <tr>
      <td><%= aut.first_name %> <%= aut.last_name %></td>
      <td><%= link_to 'Edit', edit_author_path(aut.id) %> | <%= link_to 'Delete', author_path(aut), method: :delete, data: { confirm: "Are you sure?" } %>
    </tr>
  <% end %>
</table>